doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Create a Vehicle Report
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl' crossorigin='anonymous')
  link(href='/public/stylesheets/style.css' rel='stylesheet')
  script(src='app.js')
h3 File a vehicle report here!
form.vehicleForm
  .form-group
    label.form-labels(for='vehicleSerial') Vehicle Serial #
    textarea#vehicleSerial.form-control(rows='1')
  .form-group
    label.form-labels(for='licenseNum') License #
    textarea#licenseNum.form-control(rows='1')
  .form-group
    label.form-labels(for='state') State
    textarea#state.form-control(rows='1')
  .form-group
    label.form-labels(for='year') Year
    textarea#year.form-control(rows='1')
  .form-group
    label.form-labels(for='carMake') Make
    textarea#carMake.form-control(rows='1')
  .form-group
    label.form-labels(for='carModel') Model
    textarea#carModel.form-control(rows='1')
  .form-group
    label.form-labels(for='carValue') Value
    textarea#carValue.form-control(rows='1')
  .form-group
    label.form-labels(for='carColor') Color
    textarea#carColor.form-control(rows='1')
  .submitButton
    button Submit
